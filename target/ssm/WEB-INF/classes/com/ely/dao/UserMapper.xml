<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ely.dao.UserMapper">
    <select id="selectByPrimaryKey" resultType="com.ely.domain.User">
        select * from user where uid=#{uid}
    </select>
    <select id="select" resultType="com.ely.domain.User">
        select * from user
    </select>
    <insert id="insert" parameterType="com.ely.domain.User">
        insert into user (username,password) value (#{username},#{password})
    </insert>
    <delete id="delete">
        delete from user where uid=#{uid}
    </delete>
    <update id="update" parameterType="com.ely.domain.User">
        update user set username=#{username},password=#{password} where uid=#{uid}
    </update>

    <select id="selectByUser" parameterType="com.ely.domain.User" resultType="com.ely.domain.User">
        select * from user where username=#{username} and password=#{password}
    </select>
    <select id="selectByUsername" resultType="com.ely.domain.User">
        select * from user where username=#{username}
    </select>
</mapper>